= simple_form_for(@workout, html: {class: 'form-horizontal'}) do |f|
  = f.input :date, label: "Date", input_html: {class: "form-control"}
  = f.input :workout, label: "What parts", input_html: {class: "form-control"}
  = f.input :mood, label: "Mood", input_html: {class: "form-control"}
  = f.input :length, label: "Duration", input_html: {class: "form-control"}
  = f.input :style, label: "Type", input_html: {class: "form-control"}
  = f.button :submit
